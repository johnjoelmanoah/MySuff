 <div class="container">
      <div class="lead well">
              <div class="media">
                     <div class="media-left">
                            <a href="#">
                                <img class="media-object" src="<%= @question.gravatar %>" >
                            </a>
                     </div>
                     <div class="media-body">
                            <h4 class="media-heading"><%= @question.email %> asked:</h4>
                            <%= @question.body %>
                               
                            <a href="/questions/12" class="btn btn-success btn-xs">View Answers</a>
                     </div>
                      
                 </div>
         </div>
         <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div>
                    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#new-answer-modal">
                        Submit new Answer
                    </button>
                </div>
                <%= render 'home/new_answer_form' %>
                <% @question.answers.each do |answer| %>
                <div class="media">
                     <div class="media-left">
                            <a href="#">
                                <img class="media-object" src="<%= answer.gravatar %>" >
                            </a>
                     </div>
                     <div class="media-body">
                            <h4 class="media-heading"><%= answer.email %> answered:</h4>
                            <%= answer.body %>
                               
                            <a href="/question/12" class="btn btn-success btn-xs">View Answers</a>
                     </div>
                      
                 </div>

                 <% end %>
                 <% if @question.answers.empty? %>
                  <div class="alert alert-info"> nothing here yet , be the first to answer?</div>
                
                <% end %>
            </div>
         </div>
   </div>